#!/bin/sh
# postinst script for live-installer
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

case "$1" in
    configure)
	update-mime-database /usr/share/mime
	update-desktop-database
	update-rc.d live-installer defaults 22
	test -x /usr/bin/update-menus && update-menus
	
	# Change the logo symbolic link when on KDE
	desktop=`cat /etc/linuxmint/info | grep DESKTOP`
	case "$desktop" in 
	*KDE*)
	  ln -s -f /usr/share/live-installer/logo-kde.png /usr/share/live-installer/logo.png;
	  ln -s -f /usr/share/live-installer/bullet-point-kde.png /usr/share/live-installer/bullet-point.png;
	  ln -s -f /usr/share/live-installer/slideshow/link/background-kde.jpg /usr/share/live-installer/slideshow/link/background.jpg;
	  ln -s -f /usr/share/live-installer/slideshow/icons/logo-kde.png /usr/share/live-installer/slideshow/icons/logo.png;
	esac
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


